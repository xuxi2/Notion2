<body>

    <div class="widget" id="widget"></div>


<script>

quotes=[
"¿Pero le has dado click?",
"Sitting, Sitting is the opposite of standing.",
"Blessings for your birthday, blessings for your everyday.",
"Ruler of my heart, Ruler of my heart...",
"Merequetengue",
"Entre broma y broma, el limón se asoma.",
"Hoy asumí.",
"Close-",
"¿Esta mierda la quereis?",
"Despite everything, it's still you.",
"Everything is going to be okay.",
"Mondongo",
"Agua",
];

const INTERVAL = 86400000;

function dispalyQuote(){

    document.getElementById('widget').innerHTML =quotes[0];
    quotes.forEach((quote, i) => {
        setTimeout(() => {
            document.getElementById('widget').innerHTML =quote;
        }, i * INTERVAL);  
    });
    }

    function dispalyWidget() {
        dispalyQuote();
        setTimeout(dispalyWidget, quotes.length*INTERVAL);
    }
    dispalyWidget()

</script>

</body>
